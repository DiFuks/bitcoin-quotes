{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "jsx": "preserve",
    "sourceMap": true,
    "lib": [
      "es5",
      "dom"
    ],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "keyofStringsOnly": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@app/*": [
        "src/app/*"
      ],
      "@common/*": [
        "src/common/*"
      ],
      "@features/*": [
        "src/features/*"
      ]
    },
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "strict": true
  },
  "exclude": [
    "node_modules"
  ]
}
